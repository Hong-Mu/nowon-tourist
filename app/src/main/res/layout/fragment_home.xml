<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.NT.Headline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="힐링타운 스탬프투어"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/layout_stamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_round_16"
            android:backgroundTint="@color/green_light"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include
                    android:id="@+id/stamp_1"
                    layout="@layout/item_stamp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="4dp" />

                <include
                    android:id="@+id/stamp_2"
                    layout="@layout/item_stamp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="4dp" />

                <include
                    android:id="@+id/stamp_3"
                    layout="@layout/item_stamp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="4dp" />

                <include
                    android:id="@+id/stamp_4"
                    layout="@layout/item_stamp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include
                    android:id="@+id/stamp_5"
                    layout="@layout/item_stamp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="4dp" />

                <include
                    android:id="@+id/stamp_6"
                    layout="@layout/item_stamp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="4dp" />

                <include
                    android:id="@+id/stamp_7"
                    layout="@layout/item_stamp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="4dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_month_1"
            style="@style/TextAppearance.NT.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_16"
            android:backgroundTint="@color/orange"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="00월"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_month_2"
            style="@style/TextAppearance.NT.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/bg_round_16"
            android:backgroundTint="@color/yellow"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="00월"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_month_3"
            style="@style/TextAppearance.NT.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/bg_round_16"
            android:backgroundTint="@color/yellow"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="00월"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_month_4"
            style="@style/TextAppearance.NT.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/bg_round_16"
            android:backgroundTint="@color/yellow"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="00월"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_month_5"
            style="@style/TextAppearance.NT.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/bg_round_16"
            android:backgroundTint="@color/yellow"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="0월"
            android:textColor="@color/white" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEvent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="24dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_event" />

</LinearLayout>